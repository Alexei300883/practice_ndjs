<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Название книги</label>
        <input type="text"
               value="<%= books.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
   
        <label for="inputAuthor">Автор</label>
        <input type="text"
               value="<%= books.authors %>"
               name="authors"
               class="form-control"
               id="inputAuthor">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="desc"
                class="form-control"
                id="inputDesc"
        ><%= books.description %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>